@using static LowlandTech.Specs.UI.Components.FeatureInfo

<div class="card hover:shadow-lg transition-shadow duration-200">
    <!-- Header (Specification level with Epic context) -->
    <div class="card-header">
        <div class="flex items-start justify-between">
            <div class="flex-1">
                <div class="flex flex-wrap gap-2 mb-3">
                    <span class="badge badge-primary">@Feature.SpecId</span>
                    @if (!string.IsNullOrWhiteSpace(Feature.Epic))
                    {
                        <span class="badge badge-secondary">@Feature.Epic</span>
                    }
                </div>
                <h3 class="text-xl font-semibold text-white">
                    @Feature.SpecName
                </h3>
                @if (!string.IsNullOrWhiteSpace(Feature.EpicDescription))
                {
                    <p class="text-sm text-gray-400 mt-2 italic">
                        @Feature.EpicDescription
                    </p>
                }
            </div>
        </div>
    </div>

    <!-- Body with Feature Files (User Story level) -->
    <div class="card-body space-y-6">
        @foreach (var userStory in Feature.UserStories)
        {
            <div class="gherkin-block">
                <div class="bg-gray-900/50 px-4 py-2 flex items-center justify-between border-b border-gray-700">
                    <span class="text-xs text-gray-400 font-semibold uppercase tracking-wider">Feature Specification</span>
                    <span class="text-xs text-gray-500">@(userStory.UserStoryId).feature</span>
                </div>
                
                <div class="py-3 text-gray-100">
                    @* User Story tag *@
                    <div class="gherkin-line">
                        <span class="gherkin-tag">@@@userStory.UserStoryId</span>
                    </div>

                    @* Feature declaration *@
                    <div class="gherkin-line">
                        <span class="gherkin-keyword">Feature:</span>
                        <span class="text-white ml-2">@userStory.FeatureName</span>
                    </div>

                    @* User story description *@
                    @if (!string.IsNullOrWhiteSpace(userStory.UserStoryDescription))
                    {
                        <div class="gherkin-line pl-4">
                            <span class="text-gray-400">@userStory.UserStoryDescription</span>
                        </div>
                        <div class="gherkin-line"></div>
                    }

                    @* Scenarios *@
                    @foreach (var scenario in userStory.Scenarios)
                    {
                        @* Scenario tags *@
                        @if (!string.IsNullOrWhiteSpace(scenario.ScenarioAttribute.ScenarioId))
                        {
                            <div class="gherkin-line">
                                <span class="gherkin-tag">@@@scenario.ScenarioAttribute.ScenarioId</span>
                            </div>
                        }

                        @* Scenario declaration *@
                        <div class="gherkin-line">
                            <span class="gherkin-keyword">Scenario:</span>
                            <span class="text-white ml-2">@(scenario.ScenarioAttribute.Label ?? scenario.ClassName)</span>
                        </div>

                        @* Given steps *@
                        @if (scenario.GivenAttributes.Any())
                        {
                            @for (int i = 0; i < scenario.GivenAttributes.Count; i++)
                            {
                                var given = scenario.GivenAttributes[i];
                                var keyword = i == 0 ? "Given" : "And";
                                var stateText = i == 0 && !string.IsNullOrWhiteSpace(scenario.StateTypeName) 
                                    ? $"{scenario.StateTypeName} with " 
                                    : "";
                                
                                <div class="gherkin-line pl-4">
                                    <span class="gherkin-keyword">@keyword</span>
                                    <span class="text-white ml-2">@stateText@(stateText != "" ? "" : " ")</span>
                                    <span class="gherkin-property">@given.Property</span>
                                    <span class="text-white ml-1">which should equal</span>
                                    <span class="gherkin-number ml-1">@FormatValue(given.Value)</span>
                                </div>
                            }
                        }

                        @* When step *@
                        @if (scenario.WhenAttribute != null)
                        {
                            <div class="gherkin-line pl-4">
                                <span class="gherkin-keyword">When</span>
                                @if (!string.IsNullOrWhiteSpace(scenario.WhenAttribute.ActionType))
                                {
                                    <span class="text-white ml-2">dispatching</span>
                                    <span class="gherkin-comment ml-1">@scenario.WhenAttribute.ActionType</span>
                                    <span class="text-white ml-1">to @scenario.WhenAttribute.Action</span>
                                    @if (!string.IsNullOrWhiteSpace(scenario.WhenAttribute.ActionData))
                                    {
                                        <span class="text-white ml-1">with</span>
                                        <span class="gherkin-number ml-1">@scenario.WhenAttribute.ActionData</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-white ml-2">@scenario.WhenAttribute.Action</span>
                                    @if (!string.IsNullOrWhiteSpace(scenario.WhenAttribute.ActionData))
                                    {
                                        <span class="text-white ml-1">with</span>
                                        <span class="gherkin-number ml-1">@scenario.WhenAttribute.ActionData</span>
                                    }
                                }
                            </div>
                        }

                        @* Then steps *@
                        @foreach (var then in scenario.ThenAttributes)
                        {
                            @* UAT comment *@
                            @if (!string.IsNullOrWhiteSpace(then.Attribute.Uat))
                            {
                                <div class="gherkin-line pl-4">
                                    <span class="gherkin-comment">#UAT@(then.Attribute.Uat)</span>
                                </div>
                            }
                            
                            <div class="gherkin-line pl-4">
                                <span class="gherkin-keyword">Then</span>
                                @if (!string.IsNullOrWhiteSpace(then.Attribute.Property))
                                {
                                    <span class="gherkin-property ml-2">@then.Attribute.Property</span>
                                    <span class="text-white ml-1">should be equal to</span>
                                    <span class="gherkin-number ml-1">@FormatValue(then.Attribute.Expected)</span>
                                    @if (!string.IsNullOrWhiteSpace(then.Attribute.Comment))
                                    {
                                        <span class="gherkin-comment ml-2"># @then.Attribute.Comment</span>
                                    }
                                }
                                else if (!string.IsNullOrWhiteSpace(then.Attribute.Comment))
                                {
                                    <span class="text-white ml-2">@then.Attribute.Comment</span>
                                }
                                else if (!string.IsNullOrWhiteSpace(then.Attribute.Assertion))
                                {
                                    <span class="text-white ml-2">@then.Attribute.Assertion</span>
                                }
                            </div>

                            @if (!string.IsNullOrWhiteSpace(then.Attribute.PostconditionProperty))
                            {
                                <div class="gherkin-line pl-8">
                                    <span class="gherkin-keyword">And</span>
                                    <span class="gherkin-property ml-2">@then.Attribute.PostconditionProperty</span>
                                    <span class="text-white ml-1">should be equal to</span>
                                    <span class="gherkin-number ml-1">@FormatValue(then.Attribute.PostconditionExpected)</span>
                                </div>
                            }
                        }

                        @* Try It Interactive Section *@
                        <div class="gherkin-line pl-4">
                            <div class="w-full">
                                <TryItScenario Scenario="@scenario" />
                            </div>
                        </div>

                        @* Add spacing/divider between scenarios *@
                        @if (scenario != userStory.Scenarios.Last())
                        {
                            <div class="gherkin-line mt-6 pt-6 border-t border-gray-700"></div>
                        }
                    }

                </div>
            </div>
        }
        
        <!-- Test Methods Summary -->
        <div class="mt-4 pt-4 border-t border-gray-700">
            <details class="group">
                <summary class="cursor-pointer text-sm font-medium text-gray-300 hover:text-blue-400 flex items-center">
                    <svg class="w-4 h-4 mr-2 transform group-open:rotate-90 transition-transform" width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Test Implementation (@Feature.UserStories.Sum(us => us.Scenarios.Count) scenario(s), @Feature.UserStories.Sum(us => us.Scenarios.Sum(s => s.ThenAttributes.Count)) test method(s))
                </summary>
                <div class="mt-3 pl-6 space-y-3">
                    @foreach (var userStory in Feature.UserStories)
                    {
                        @foreach (var scenario in userStory.Scenarios)
                        {
                            <div class="border-l-2 border-blue-500 pl-3">
                                <p class="text-sm font-medium text-white">@scenario.ClassName</p>
                                <div class="mt-1 space-y-1">
                                    @foreach (var then in scenario.ThenAttributes)
                                    {
                                        <div class="flex items-center text-sm">
                                            <svg class="w-4 h-4 text-green-500 mr-2" width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                            </svg>
                                            <code class="text-gray-400">@then.MethodName</code>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </details>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public FeatureInfo Feature { get; set; } = null!;

    private static string FormatValue(object? value)
    {
        if (value == null) return "null";
        if (value is string s) return $"\"{s}\"";
        return value.ToString() ?? "null";
    }
}

