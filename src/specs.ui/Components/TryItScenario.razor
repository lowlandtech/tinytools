@using static LowlandTech.Specs.UI.Components.ScenarioInfo
@using System.Text.Json

<div class="mt-4">
    <button @onclick="ToggleTryIt" 
            class="flex items-center gap-2 text-sm font-medium text-blue-400 hover:text-blue-300 transition-colors">
        <svg class="w-4 h-4" width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
        </svg>
        Try this scenario with your data
    </button>

    @if (showTryIt)
    {
        <div class="mt-4 space-y-4">
            <!-- State Use Case Data (Given) -->
            <div>
                <div class="flex items-center justify-between mb-2">
                    <label class="text-sm font-medium text-gray-300">State Use Case Data</label>
                    <button @onclick="LoadExample" 
                            class="text-xs text-blue-400 hover:text-blue-300">
                        Load Example
                    </button>
                </div>
                <textarea @bind="jsonInput" 
                          class="w-full h-48 px-3 py-2 bg-gray-900 border border-gray-700 rounded text-gray-100 font-mono text-sm focus:outline-none focus:border-blue-500"
                          placeholder='{ "Balance": 100, "AccountStatus": "Active" }'></textarea>
                <p class="text-xs text-gray-500 mt-1">Defines the Given clause - initial state for the scenario</p>
            </div>
            
            <!-- Action Data (When) -->
            @if (!string.IsNullOrWhiteSpace(Scenario.WhenAttribute?.ActionType))
            {
                <div>
                    <label class="text-sm font-medium text-gray-300 mb-2 block">
                        Action Use Case Data (@Scenario.WhenAttribute.ActionType)
                    </label>
                    <input type="text" 
                           @bind="actionData" 
                           class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded text-gray-100 font-mono text-sm focus:outline-none focus:border-blue-500"
                           placeholder="Amount: 50" />
                    <p class="text-xs text-gray-500 mt-1">Defines the When clause - action parameters (e.g., "Amount: 50")</p>
                </div>
            }
            
            <!-- Expected Outcomes (Then) -->
            @if (Scenario.ThenAttributes.Any())
            {
                <div>
                    <label class="text-sm font-medium text-gray-300 mb-2 block">
                        Expected Use Case Outcomes
                    </label>
                    <div class="space-y-3">
                        @foreach (var then in Scenario.ThenAttributes)
                        {
                            var propertyKey = then.MethodName + "_" + then.Attribute.Property;
                            var postconditionKey = then.MethodName + "_" + then.Attribute.PostconditionProperty;
                            
                            @if (!string.IsNullOrWhiteSpace(then.Attribute.Property))
                            {
                                <div>
                                    <label class="text-xs font-medium text-gray-400 mb-1 block">@then.Attribute.Property</label>
                                    <input type="text" 
                                           value="@GetExpectedValue(propertyKey)"
                                           @oninput="@(e => SetExpectedValue(propertyKey, e.Value?.ToString() ?? ""))"
                                           class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded text-gray-100 font-mono text-sm focus:outline-none focus:border-blue-500"
                                           placeholder="@then.Attribute.Expected?.ToString()" />
                                </div>
                            }
                            @if (!string.IsNullOrWhiteSpace(then.Attribute.PostconditionProperty))
                            {
                                <div>
                                    <label class="text-xs font-medium text-gray-400 mb-1 block">@then.Attribute.PostconditionProperty</label>
                                    <input type="text" 
                                           value="@GetExpectedValue(postconditionKey)"
                                           @oninput="@(e => SetExpectedValue(postconditionKey, e.Value?.ToString() ?? ""))"
                                           class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded text-gray-100 font-mono text-sm focus:outline-none focus:border-blue-500"
                                           placeholder="@then.Attribute.PostconditionExpected?.ToString()" />
                                </div>
                            }
                        }
                    </div>
                    <p class="text-xs text-gray-500 mt-1">Defines the Then clause - adjust expected values to match your action data</p>
                </div>
            }

            <!-- Run Button -->
            <button @onclick="RunTest" 
                    disabled="@isRunning"
                    class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 disabled:bg-gray-600 text-white font-medium rounded transition-colors flex items-center justify-center gap-2">
                @if (isRunning)
                {
                    <svg class="animate-spin h-4 w-4" width="16" height="16" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span>Running...</span>
                }
                else
                {
                    <svg class="w-4 h-4" width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
                    </svg>
                    <span>Run Test</span>
                }
            </button>

            <!-- Results -->
            @if (result != null)
            {
                <div class="border border-gray-700 rounded-lg overflow-hidden">
                    <div class="px-4 py-3 @(result.Success ? "bg-green-900/30 border-b border-green-700" : "bg-red-900/30 border-b border-red-700")">
                        <div class="flex items-center gap-2">
                            @if (result.Success)
                            {
                                <svg class="w-5 h-5 text-green-400" width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                                <span class="font-medium text-green-300">All Tests Passed</span>
                            }
                            else
                            {
                                <svg class="w-5 h-5 text-red-400" width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                </svg>
                                <span class="font-medium text-red-300">Test Failed</span>
                            }
                        </div>
                        @if (!string.IsNullOrWhiteSpace(result.ErrorMessage))
                        {
                            <p class="text-sm text-red-300 mt-1">@result.ErrorMessage</p>
                        }
                    </div>

                    <div class="p-4 space-y-4">
                        <!-- State Comparison -->
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <h4 class="text-xs font-semibold text-gray-400 uppercase mb-2">Initial State</h4>
                                <pre class="text-xs bg-gray-900 p-2 rounded text-gray-300">@JsonSerializer.Serialize(result.InitialState, new JsonSerializerOptions { WriteIndented = true })</pre>
                            </div>
                            <div>
                                <h4 class="text-xs font-semibold text-gray-400 uppercase mb-2">Final State</h4>
                                <pre class="text-xs bg-gray-900 p-2 rounded text-gray-300">@JsonSerializer.Serialize(result.FinalState, new JsonSerializerOptions { WriteIndented = true })</pre>
                            </div>
                        </div>

                        <!-- Assertions -->
                        @if (result.Assertions.Any())
                        {
                            <div>
                                <h4 class="text-xs font-semibold text-gray-400 uppercase mb-2">
                                    Assertions (@result.Assertions.Count(a => a.Passed)/@result.Assertions.Count Passed)
                                </h4>
                                <div class="space-y-2">
                                    @foreach (var assertion in result.Assertions)
                                    {
                                        <div class="flex items-start gap-2 text-sm">
                                            @if (assertion.Passed)
                                            {
                                                <svg class="w-4 h-4 text-green-400 mt-0.5 flex-shrink-0" width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                                </svg>
                                            }
                                            else
                                            {
                                                <svg class="w-4 h-4 text-red-400 mt-0.5 flex-shrink-0" width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                                </svg>
                                            }
                                            <div class="flex-1">
                                                <p class="@(assertion.Passed ? "text-gray-300" : "text-red-300 font-medium")">@assertion.Description</p>
                                                <p class="text-xs @(assertion.Passed ? "text-gray-500" : "text-red-400")">
                                                    Expected: <span class="font-mono">@assertion.Expected</span>, 
                                                    Actual: <span class="font-mono @(assertion.Passed ? "" : "font-bold")">@assertion.Actual</span>
                                                </p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>



@code {
    [Parameter, EditorRequired]
    public ScenarioInfo Scenario { get; set; } = null!;

    private bool showTryIt = false;
    private string jsonInput = "";
    private string actionData = "";
    private Dictionary<string, string> expectedValues = new();
    private bool isRunning = false;
    private TestExecutionResult? result = null;

    private void ToggleTryIt()
    {
        showTryIt = !showTryIt;
        if (showTryIt)
        {
            if (string.IsNullOrWhiteSpace(jsonInput))
            {
                LoadExample();
            }
            if (string.IsNullOrWhiteSpace(actionData))
            {
                actionData = Scenario.WhenAttribute?.ActionData ?? "";
            }
            if (!expectedValues.Any())
            {
                LoadExpectedValues();
            }
        }
    }

    private void LoadExample()
    {
        jsonInput = TestRunner.GetExampleJson(Scenario);
    }

    private void LoadExpectedValues()
    {
        expectedValues.Clear();
        foreach (var then in Scenario.ThenAttributes)
        {
            if (!string.IsNullOrWhiteSpace(then.Attribute.Property))
            {
                expectedValues[then.MethodName + "_" + then.Attribute.Property] = 
                    then.Attribute.Expected?.ToString() ?? "";
            }
            if (!string.IsNullOrWhiteSpace(then.Attribute.PostconditionProperty))
            {
                expectedValues[then.MethodName + "_" + then.Attribute.PostconditionProperty] = 
                    then.Attribute.PostconditionExpected?.ToString() ?? "";
            }
        }
    }

    private string GetExpectedValue(string key)
    {
        return expectedValues.TryGetValue(key, out var value) ? value : "";
    }

    private void SetExpectedValue(string key, string value)
    {
        expectedValues[key] = value;
    }

    private async Task RunTest()
    {
        isRunning = true;
        result = null;
        
        // Simulate async execution
        await Task.Delay(500);
        
        result = TestRunner.ExecuteScenario(Scenario, jsonInput, actionData, expectedValues);
        
        isRunning = false;
    }
}
